<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:background="@drawable/et_bg"
        android:orientation="horizontal">

        <!-- Field 1 -->
        <TextView
            android:id="@+id/tvVerityCode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_border_green"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="5001"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Field 2 -->
        <!--<TextView
            android:id="@+id/tvVerityName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_border_green"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="K.Pukhraj"
            android:textColor="@color/black"
            android:textSize="16sp" />-->

        <!-- Field 3 -->
        <TextView
            android:id="@+id/tvPurpose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_border_green"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Table"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Field 4 -->
        <EditText
            android:id="@+id/etSample1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:maxLength="6"
            android:inputType="numberDecimal"
            android:digits="0123456789.00"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Field 5 -->
        <EditText
            android:id="@+id/etSample2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:maxLength="5"
            android:inputType="numberDecimal"
            android:digits="0123456789.00"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Field 6 -->
        <EditText
            android:id="@+id/etSample3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:maxLength="5"
            android:inputType="numberDecimal"
            android:digits="0123456789.00"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:minHeight="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRemarks"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Remarks"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etRemarks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:drawable/editbox_background"
            android:inputType="textMultiLine"
            android:maxLength="200"
            android:textSize="16sp"
            android:textColor="@color/black" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/app_color" />

    </LinearLayout>